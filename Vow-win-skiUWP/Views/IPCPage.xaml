<Page
    x:Class="Vow_win_skiUWP.Views.IPCPage"        
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vow_win_skiUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,0,-127" >
        <Image Source="../Assets/postman-pat-2.png" x:Name="image2" HorizontalAlignment="Left" Height="290" Margin="455,357,0,0" VerticalAlignment="Top" Width="326"/>
       



        <StackPanel Orientation="Horizontal" Margin="-10,0,10,0" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Width="600">
                <TextBlock FontSize="20" TextAlignment="Center" FontFamily="Wide Latin" Text="Waiting Messages" />
                <ScrollViewer Margin="20">
                    <ListView x:Name="WaitingMessages" Height="400" ItemsSource="{Binding WaitingMessages, Mode=OneWay}">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Receiver" Margin="10" FontWeight="Bold" />
                                    <TextBlock Text="Sender" Margin="10" FontWeight="Bold" />
                                    <TextBlock Text="Message" Margin="10" FontWeight="Bold" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="{Binding GetReceiverId}" Margin="10" HorizontalAlignment="Center" />
                                    <TextBlock Text="{Binding GetSenderId}" Margin="10" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding GetMessage}" Margin="10" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="600">
                <TextBlock FontSize="20" TextAlignment="Center" FontFamily="Wide Latin" Text="Received Messages" />
                <ScrollViewer Margin="20">
                    <ListView x:Name="ReceivedMesseges" Height="400" ItemsSource="{Binding ReceivedMessages, Mode=OneWay}">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Receiver" Margin="10" FontWeight="Bold" />
                                    <TextBlock Text="Sender" Margin="10" FontWeight="Bold" />
                                    <TextBlock Text="Message" Margin="10" FontWeight="Bold" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding GetReceiverId}" Margin="10" HorizontalAlignment="Center" />
                                    <TextBlock Text="{Binding GetSenderId}" Margin="10" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding GetMessage}" Margin="10" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
       
    </Grid>

   

 
</Page>
