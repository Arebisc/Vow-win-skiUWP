<ContentDialog
    x:Class="Vow_win_skiUWP.Views.Helpers.CWDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vow_win_skiUWP.Views.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create file"
    PrimaryButtonText="Create"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock>New file name</TextBlock>
                <TextBox Name="FileName" Width="130"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>File name on Windows</TextBlock>
                <TextBox Name="FileNameFromWindows" Width="130"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>
